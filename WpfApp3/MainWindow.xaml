<mah:MetroWindow
    x:Class="WpfApp3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <mah:MultiSelectionComboBox
            mah:MultiSelectorHelper.SelectedItems="{Binding SelectedPersonViewModels, Mode=TwoWay}"
            mah:TextBoxHelper.AutoWatermark="True"
            mah:TextBoxHelper.UseFloatingWatermark="True"
            DisplayMemberPath="Name"
            EditableTextStringComparision="CurrentCultureIgnoreCase"
            ItemsSource="{Binding PersonViewModels, Mode=TwoWay}"
            ObjectToStringComparer="{mah:DefaultObjectToStringComparer}"
            Separator=", " />
    </StackPanel>
</mah:MetroWindow>
